<% title "Wszystkie fortunki" %>
<%= form_tag fortunes_path, :method => :get, :remote => true do %>  
  <p>  
    <%= text_field_tag :search, params[:search] %>  
    <%= submit_tag "Search", :name => nil %>  
  </p>  
<% end %>  
<div id="fortunes">
  <%= render @fortunes %>
</div>
<p><%= link_to "New Fortune", new_fortune_path %></p>
